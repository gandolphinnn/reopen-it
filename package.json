{
	"name": "reopen-it",
	"publisher": "gandolphinnn",
	"displayName": "Reopen It",
	"icon": "resources/icon.png",
	"description": "",
	"version": "0.0.1",
	"repository": {
		"type": "git",
		"url": "https://github.com/gandolphinnn/reopen-it"
	},
	"engines": {
		"vscode": "^1.89.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onView:reopenIt-tree"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "reopen-it.toggleFavourite",
				"category": "ReopenIt",
				"title": "Add/remove from favourites"
			},
			{
				"command": "reopen-it.saveWorkspace",
				"category": "ReopenIt",
				"title": "Save workspace"
			},
			{
				"command": "reopen-it.saveWorkspaceAs",
				"category": "ReopenIt",
				"title": "Save workspace as"
			},
			{
				"command": "reopen-it.saveCloseWorkspace",
				"category": "ReopenIt",
				"title": "Save and close workspace"
			},
			{
				"command": "reopen-it.openWorkspace",
				"category": "ReopenIt",
				"title": "Open workspace"
			}
		],
		"viewsContainers": {
			"activitybar": [
				{
				"id": "reopenIt-tree",
				"title": "Reopen It",
				"icon": "resources/icon.svg"
				}
			]
		},
		"views": {
			"reopenIt-tree": [
				{
					"type": "tree",
					"id": "reopenIt-favourites",
					"name": "Favourites"
				},
				{
					"type": "tree",
					"id": "reopenIt-workspaces",
					"name": "Workspaces"
				}
			]
		},
		"menus": {
			"editor/context": [
				{
					"command": "reopen-it.addFavourite",
					"title": "Add to favourites"
				},
				{
					"command": "reopen-it.removeFavourite",
					"title": "Remove from favourites"
				}
			],
			"view/title": [
				{
					"command": "nodeDependencies.refreshEntry",
					"when": "view == nodeDependencies",
					"group": "navigation"
				}
			],
			"view/item/context": [
				{
					"command": "reopen-it.copyPath",
					"title": "Copy file path",
					"when": "view == reopenIt-favourites"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "vscode-test"
	},
	"devDependencies": {
		"@types/vscode": "^1.89.0",
		"@types/mocha": "^10.0.6",
		"@types/node": "18.x",
		"@typescript-eslint/eslint-plugin": "^7.7.1",
		"@typescript-eslint/parser": "^7.7.1",
		"eslint": "^8.57.0",
		"typescript": "^5.4.5",
		"@vscode/test-cli": "^0.0.9",
		"@vscode/test-electron": "^2.3.9"
	}
}
