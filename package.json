{
	"name": "reopen-it",
	"displayName": "Reopen It",
	"description": "",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.89.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [],
	"main": "./out/extension.js",
	"contributes": {
		"viewsContainers": {
			"activitybar": [
				{
				"id": "reopenIt",
				"title": "Reopen It",
				"icon": "media/dep.svg"
				}
			]
		},
		"views": {
			"reopenIt": [
				{
					"id": "reopenIt-favourites",
					"name": "Favourites"
				},
				{
					"id": "reopenIt-workspaces",
					"name": "Workspaces"
				}
			]
		},
		"commands": [
			{
				"command": "reopen-it.showOpenTabs",
				"title": "Show Open Tabs"
			}
		],
		"menus": {
			"editor/context": [
				{
					"command": "reopen-it.addFavourite",
					"title": "Add to favourites"
				},
				{
					"command": "reopen-it.removeFavourite",
					"title": "Remove from favourites"
				}
			],
			"view/title": [
				{
					"command": "nodeDependencies.refreshEntry",
					"when": "view == nodeDependencies",
					"group": "navigation"
				}
			],
			"view/item/context": [
				{
					"command": "reopen-it.openFavourite",
					"title": "Open file",
					"when": "view == reopen-it"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "vscode-test"
	},
	"devDependencies": {
		"@types/vscode": "^1.89.0",
		"@types/mocha": "^10.0.6",
		"@types/node": "18.x",
		"@typescript-eslint/eslint-plugin": "^7.7.1",
		"@typescript-eslint/parser": "^7.7.1",
		"eslint": "^8.57.0",
		"typescript": "^5.4.5",
		"@vscode/test-cli": "^0.0.9",
		"@vscode/test-electron": "^2.3.9"
	}
}
